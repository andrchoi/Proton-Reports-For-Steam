{
    "manifest_version": 2,
    "name": "ProtonDB Ratings on Steam",
    "author": "choiandr",
    "version": "1.0",
  
    "description": "Shows details from ProtonDB ratings on steam store pages.",
  
    "content_scripts": [
      {
        "matches": [
          "https://*.store.steampowered.com/app/*"
      ],
        "js": ["src/protonData.js", "src/unofficialAPI.js", "src/appPage.js"]
      }
    ],

    "permissions" : [
      "storage",
      "https://www.protondb.com/*",
      "https://protondb.max-p.me/*"
    ]
  }