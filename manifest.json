{
    "manifest_version": 2,
    "name": "ProtonDB Ratings on Steam",
    "version": "1.0",
  
    "description": "Shows details from ProtonDB ratings on steam store pages.",
  
    "content_scripts": [
      {
        "matches": ["*://*.store.steampowered.com/app/*"],
        "js": ["src/protonData.js", "src/appPage.js"]
      }
    ],

    "permissions" : [
        "https://protondb.max-p.me/games/*",
        "https://www.protondb.com/*",
        "*://*.store.steampowered.com/app/*",
        "storage"
    ]
  
  }